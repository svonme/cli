{
  "compilerOptions": {
    "noImplicitAny": false,
    "declaration": false,
    "incremental": true,
    "sourceMap": true,
    "module": "es6",
    "jsx": "preserve",
    "target": "es6",
    "allowJs": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "noEmitOnError": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "pretty": true,
    "baseUrl": ".",
    "paths": {
      "src": ["./src"]
    },
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitReturns": true,
    "strictNullChecks": false,
    "lib": ["dom", "es2015", "es2016", "es2017", "dom.iterable", "scripthost"],
    "typeRoots": [
      "./node_modules/@types/", "./typings/"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js",
    "./src/**/*.tsx",
    "./src/**/*.vue"
  ],
  "exclude": ["node_modules"]
}